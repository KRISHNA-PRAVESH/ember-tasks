
   <div class="search-area">
     {{input type="text" class="search-box" value=this.search_value placeholder="Search.."}}
    <button type="button" {{on "click" this.filter}}>Search</button>
    <button type="button" {{on "click" this.resetFilter}}>Reset</button>
   </div>
   
    
    <div class="edit-btn">
        <button style="margin-left: 190px;" type="button" {{on 'click' this.deleteSelectedRows}}>Delete</button>
        <LinkTo @route="add"><button type="button">Add</button></LinkTo>
    </div>
    
    <div class="table">
        
        <table border="2" width="80%" id="data">
            <tr class="header" id="header">
              <th>Select</th>
              <th>Id</th>
              <th>Name</th>
              <th>Profile</th>
              <th>Department</th>
              <th>In/out - Time</th>
              <th >Date</th>
              <th></th>
            </tr>
            {{#each @data as |record|}}
                <tr>
                    {{!-- <td><input type="checkbox" {{on 'checked' record.id}}></td> --}}
                    <td><input type="checkbox" checked={{is-selected record.id this.selectedRows}} {{action 'check' record.id}}></td>
                    <td>{{record.id}}</td>
                    <td>{{record.name}}</td>
                    <td>{{record.profile}}</td>
                    <td>{{record.department}}</td>
                    <td>{{record.time}}</td>
                    <td>{{record.date}}</td>
                    <td style="text-align: center;"><LinkTo @route="edit" @model={{record.id}}><button type="button">Edit</button></LinkTo></td>
                </tr>
            {{/each}}
          
            
            
        </table>

        <br>
          
      

    </div>
   
    
